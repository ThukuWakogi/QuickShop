<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qs_gradient"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/successfullyInBannerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/successfullyIn"
            android:textColor="@color/darkGray"
            android:textSize="45sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/proofStatementTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/proofStatement"
            android:gravity="center_horizontal"
            android:layout_marginBottom="40dp"/>
        <TextView
            android:id="@+id/logOutRequestTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/logOutRequestText"
            android:layout_marginTop="15dp"/>
        <Button
            android:id="@+id/logOutButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="25dp"
            android:text="@string/logOutText"
            android:textColor="@color/darkGray"
            android:background="@drawable/qs_button"/>
    </LinearLayout>
</RelativeLayout>

